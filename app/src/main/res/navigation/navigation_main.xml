<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_main"
    app:startDestination="@id/splashFragment">

    <action
        android:id="@+id/action_to_productDetailsFragment"
        app:destination="@id/productDetailsFragment"
        app:exitAnim="@anim/fade_out"
        app:popExitAnim="@anim/fade_out" />

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.temy.coffeeshop.splash.view.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:exitAnim="@anim/fade_out"
            app:popExitAnim="@anim/fade_out"
            app:popUpTo="@id/navigation_main"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.temy.coffeeshop.navigation.view.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/productDetailsFragment"
        android:name="com.temy.coffeeshop.shop.details.view.ProductDetailsFragment"
        android:label="fragment_product_details"
        tools:layout="@layout/fragment_product_details" >
        <argument
            android:name="productData"
            app:argType="com.temy.coffeeshop.model.Product"/>
    </fragment>
</navigation>