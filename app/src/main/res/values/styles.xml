<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Buttons -->

    <style name="Button.Primary" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/primary_button_background</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textAppearance">@style/Button700BColorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="Button.Secondary" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/secondary_button_background</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textAppearance">@style/Button700BColorCharcoal</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="Button.Secondary.Small" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/small_button_height</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/primary_button_background</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textAppearance">@style/Button500BColorWhite</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="Button.Secondary.Small.Highlighted" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/small_button_height</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/highlighted_button_background</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textAppearance">@style/Button500MColorOrange</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="Button.Mini" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/mini_button_height</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/mini_button_background</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textAppearance">@style/Button500MColorDark</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="Button.Tiny" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/tiny_button_height</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/tiny_button_background</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textAppearance">@style/Button500MColorOrangered</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>

    </style>
</resources>