<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:padding="8dp">

        <androidx.appcompat.widget.AppCompatButton
            style="@style/Button.Primary"
            android:id="@+id/button1"
            android:text="Text Button.Primary" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="8dp"
            style="@style/Button.Secondary"
            android:id="@+id/button2"
            android:text="Text Button.Secondary" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="8dp"
            style="@style/Button.Secondary.Small"
            android:id="@+id/button3"
            android:text="Text Button.Secondary.Small" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="8dp"
            style="@style/Button.Secondary.Small.Highlighted"
            android:id="@+id/button4"
            android:text="Text Button.Small.Highlighted" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="8dp"
            style="@style/Button.Mini"
            android:id="@+id/button5"
            android:text="Text Button.Mini" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="8dp"
            style="@style/Button.Tiny"
            android:id="@+id/button6"
            android:text="Text Button.Tiny" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>